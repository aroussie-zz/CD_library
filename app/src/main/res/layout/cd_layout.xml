<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="185sp"
    android:id="@+id/cd_layout">

    <ImageView
        android:layout_width="128px"
        android:layout_height="128px"
        android:id="@+id/picture_CD"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/titleView"
        android:layout_marginStart="22dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_above="@+id/picture_CD"
        android:layout_toEndOf="@+id/picture_CD" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/artistView"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/titleView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/countryView"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/titleView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/yearView"
        android:layout_alignBottom="@+id/artistView"
        android:layout_alignStart="@+id/countryView"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/availibilityView"
        android:textSize="17sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignStart="@+id/priceView"
        android:layout_marginBottom="10sp"
        android:layout_toEndOf="@+id/countryView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/companyView"
        android:textSize="15sp"
        android:layout_below="@+id/picture_CD"
        android:layout_alignStart="@+id/artistView"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/priceView"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_alignTop="@+id/companyView"
        android:layout_alignStart="@+id/yearView" />
</RelativeLayout>

